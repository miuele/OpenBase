<?xml version='1.0'?>
<sdf version='1.6' xmlns:xacro="http://www.ros.org/wiki/xacro">
	<model name='unicycle_wheel_model'>
		<pose>0 0 0.01 0 0 0</pose>
		<link name='unicycle_wheel_rim_link'>
			<pose>0 0 0.005 0 0 0</pose>
			<inertial>
				<mass>0.00835758</mass>
				<inertia>
					<ixx>9.40333e-07</ixx>
					<ixy>0</ixy>
					<ixz>0</ixz>
					<iyy>6.63684e-07</iyy>
					<iyz>0</iyz>
					<izz>6.63684e-07</izz>
				</inertia>
				<pose>0 -0.000343 0 0 0 0</pose>
			</inertial>
			<visual name='visual'>
				<pose>0 0 0 0 ${pi/2} 0</pose>
				<geometry>
					<cylinder>
						<radius>0.014</radius>
						<length>0.01</length>
					</cylinder>
				</geometry>
				<material>
					<lighting>true</lighting>
					<script>
						<uri>file://media/materials/scripts/gazebo.material</uri>
						<name>Gazebo/Grey</name>
					</script>
					<ambient>0.3 0.3 0.3 1</ambient>
					<diffuse>0.7 0.7 0.7 1</diffuse>
					<specular>0.01 0.01 0.01 1</specular>
					<emissive>0 0 0 1</emissive>
					<shader type='vertex'>
						<normal_map>__default__</normal_map>
					</shader>
				</material>
			</visual>
			<collision name='collision'>
				<laser_retro>0</laser_retro>
				<max_contacts>10</max_contacts>
				<pose>0 0 0 0 ${pi/2} 0</pose>
				<geometry>
					<cylinder>
						<radius>0.014</radius>
						<length>0.01</length>
					</cylinder>
				</geometry>
				<surface>
					<friction>
						<ode>
							<mu>1</mu>
							<mu2>1</mu2>
							<fdir1>0 0 0</fdir1>
							<slip1>0</slip1>
							<slip2>0</slip2>
						</ode>
						<torsional>
							<coefficient>1</coefficient>
							<patch_radius>0</patch_radius>
							<surface_radius>0</surface_radius>
							<use_patch_radius>true</use_patch_radius>
							<ode>
								<slip>0</slip>
							</ode>
						</torsional>
					</friction>
					<bounce>
						<restitution_coefficient>0</restitution_coefficient>
						<threshold>1e+06</threshold>
					</bounce>
					<contact>
						<collide_without_contact>false</collide_without_contact>
						<collide_bitmask>1</collide_bitmask>
						<ode>
							<soft_cfm>0</soft_cfm>
							<soft_erp>0.2</soft_erp>
							<kp>1e+13</kp>
							<kd>1</kd>
							<max_vel>0.01</max_vel>
							<min_depth>0</min_depth>
						</ode>
						<bullet>
							<split_impulse>true</split_impulse>
							<split_impulse_penetration_threshold>-0.01</split_impulse_penetration_threshold>
							<soft_cfm>0</soft_cfm>
							<soft_erp>0.2</soft_erp>
							<kp>1e+13</kp>
							<kd>1</kd>
						</bullet>
					</contact>
				</surface>
			</collision>
		</link>

		<joint name='unicycle_wheel_axle_joint' type='revolute'>
			<parent>unicycle_wheel_bearing_link</parent>
			<child>unicycle_wheel_rim_link</child>
			<pose>0 0 0 ${pi} ${-pi/2} ${pi}</pose>
			<axis>
				<xyz>0 0 1</xyz>
				<limit>
					<lower>-1.79769e+308</lower>
					<upper>1.79769e+308</upper>
					<effort>-1</effort>
					<velocity>-1</velocity>
				</limit>
				<dynamics>
					<spring_reference>0</spring_reference>
					<spring_stiffness>0</spring_stiffness>
					<damping>0</damping>
					<friction>0.0001</friction>
				</dynamics>
			</axis>
			<physics>
				<ode>
					<limit>
						<cfm>0</cfm>
						<erp>0.2</erp>
					</limit>
					<suspension>
						<cfm>0</cfm>
						<erp>0.2</erp>
					</suspension>
				</ode>
			</physics>
		</joint>

		<link name="unicycle_wheel_bearing_link">
			<pose>0 0 0.005 0 0 0</pose>
			<!--
			<visual name="visual">
				<pose>0 0 0 0 ${pi/2} 0</pose>
				<geometry>
					<cylinder>
						<radius>0.005</radius>
						<length>0.012</length>
					</cylinder>
				</geometry>
			</visual>
			-->
			<inertial>
				<mass>0.001</mass>
				<inertia>
					<ixx>0.00001</ixx>
					<ixy>0</ixy>
					<ixz>0</ixz>
					<iyy>0.00001</iyy>
					<iyz>0</iyz>
					<izz>0.00001</izz>
				</inertia>
			</inertial>
		</link>

		<joint name="unicycle_steering_joint" type="revolute">
			<parent>unicycle_wheel_base_link</parent>
			<child>unicycle_wheel_bearing_link</child>
			<pose>0 0 -0.005 0 0 0</pose>
			<axis>
				<xyz>0 0 1</xyz>
				<use_parent_model_frame>0</use_parent_model_frame>
				<limit>
					<lower>-1.79769e+308</lower>
					<upper>1.79769e+308</upper>
					<effort>-1</effort>
					<velocity>-1</velocity>
				</limit>
				<dynamics>
					<spring_reference>0</spring_reference>
					<spring_stiffness>0</spring_stiffness>
					<damping>0</damping>
					<friction>0.0001</friction>
				</dynamics>
			</axis>
		</joint>

		<link name="unicycle_wheel_base_link">
			<kinematic>false</kinematic>
			<inertial>
				<mass>0.001</mass>
				<inertia>
					<ixx>0.00001</ixx>
					<ixy>0</ixy>
					<ixz>0</ixz>
					<iyy>0.00001</iyy>
					<iyz>0</iyz>
					<izz>0.00001</izz>
				</inertia>
			</inertial>
			<!--
			<visual name="visual">
				<geometry>
					<box>
						<size>0.03 0.03 0.0025</size>
					</box>
				</geometry>
			</visual>
			-->
		</link>

		<!--
		<plugin name="indep_steer_drive" filename="libgazebo_ros_indep_steer_drive.so">
			<unicycle_joints>
				<steer>unicycle_steering_joint</steer>
				<axle>unicycle_wheel_axle_joint</axle>
			</unicycle_joints>
			<wheel_radius>0.05</wheel_radius>
		</plugin>
		-->

	</model>
</sdf>
